{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "connection": {
      "type": "object",
      "description": "A GitHub connection",
      "properties": {
        "accessToken": {
          "type": "string",
          "writeOnly": true,
          "description": "A GitHub access token"
        }
      },
      "required": [
        "accessToken"
      ]
    },
    "org": {
      "type": "string",
      "description": "The GitHub org to query."
    },
    "name": {
      "type": "string",
      "description": "The name of a single repo within the org to return."
    },
    "scope": {
      "type": "string",
      "description": "The repository scope or type to query for. (all, public, private, forks, sources, member)",
      "default": "all"
    },
    "sort": {
      "type": "string",
      "description": "The property to sort by. (created, updated, pushed, full_name)",
      "default": "created"
    },
    "direction": {
      "type": "string",
      "description": "The direction to sort by. (asc, desc)",
      "default": "asc"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional fields to return in the output."
    }
  },
  "required": [
    "org"
  ],
  "additionalProperties": false
}
